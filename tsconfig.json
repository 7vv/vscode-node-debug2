{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "sourceMap": true,
        "outDir": "out",

        "noImplicitAny": false,
        "removeComments": false,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true
    },
    "exclude": [
        "node_modules/",
        "testapp/",
        "testdata/"
    ]
}

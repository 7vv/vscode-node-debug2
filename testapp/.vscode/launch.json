{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch script",
            "protocol": "inspector",
            "stopOnEntry": true,
            "program": "${workspaceRoot}/test.js",
            // "runtimeExecutable": "/Users/roblou/.nvm/versions/node/v8.4.0/bin/node",
            "trace": true
        },
        {
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "name": "Launch Program",
            "program": "${workspaceRoot}/out/app.js",
            "outFiles": ["${workspaceRoot}/out/**/*.js"],
            "skipFiles": [
                "<eval>/**"
            ],
            "trace": true
        },
        {
            "debugServer": 4712,
            "type": "node",
            "request": "launch",
            "name": "Launch Program nodemon",
            "runtimeArgs": [
                "${workspaceRoot}/node_modules/nodemon/bin/nodemon.js",
                "--inspect=12346"
            ],
            "program": "${workspaceRoot}/out/app.js",
            "protocol": "inspector",
            "restart": true,
            "port": 12346
        },
        {
            "debugServer": 4712,
            "name": "Launch Eval",
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "program": "${workspaceRoot}/out/eval.js",
            "cwd": "${workspaceRoot}",
            "outFiles": ["${workspaceRoot}/out/**/*.js"]
        },
        {
            "name": "Launch Async/await",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "runtimeExecutable": "/Users/roblou/.nvm/versions/node/v7.7.1/bin/node",
            "program": "${workspaceRoot}/async/app.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Launch Promise",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceRoot}/out/async/promise.js",
            "cwd": "${workspaceRoot}",
            "smartStep": true,
            "outFiles": [
                "${workspaceRoot}/out/**/*.js"
            ]
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            // "sourceMaps": true,
            "outFiles": [ "${workspaceRoot}/out/**/*.js" ],
            // "localRoot": "${workspaceRoot}",
            // "remoteRoot": "/Users/roblou/Downloads/testapp",
            // "trace": "all"
            // "verboseDiagnosticLogging": true
            // "restart": true
        },
        {
            "debugServer": 4712,
            "name": "Attach remote",
            "type": "node",
            "showAsyncStacks": true,
            "request": "attach",
            "protocol": "inspector",
            "port": 9229,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/Users/roblou/tmp/remote-debug"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "protocol": "inspector",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": [
                "--debug=5858"
            ],
            "program": "${workspaceRoot}/out/app.js",
            "restart": true,
            "port": 5858,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "outFiles": [ "${workspaceRoot}/out/**/*.js" ]
        }
    ]
}

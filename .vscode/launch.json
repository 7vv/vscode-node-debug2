{
    "version": "0.1.0",
    // "debugServer": "4712",
    "configurations": [
        {
            "name": "launch as server",
            "type": "node",
			"request": "launch",
			"protocol": "inspector",
            "cwd": "${workspaceDir}",
            "program": "${workspaceDir}/out/src/nodeDebug.js",
            "args": [ "--server=4712" ],
            "outFiles": ["${workspaceDir}/out/**/*.js"]
		},
		{
			"name": "run file",
			"type": "node",
			"request": "launch",
			"protocol": "inspector",
			"cwd": "${workspaceDir}",
			"program": "${file}"
		},
        {
			"name": "Run Tests",
			"type": "node",
			"protocol": "auto",
			"request": "launch",
			"cwd": "${workspaceDir}",
			"program": "${workspaceDir}/node_modules/.bin/_mocha",
			"args": [
				"-u", "tdd",
				"--timeout", "180000000",
				"--colors",
				"./out/test",
                "-R", "node_modules/vscode-chrome-debug-core-testsupport/out/loggingReporter.js"
			],
			"outFiles": [ "${workspaceDir}/out/test/**/*.js" ],
			"internalConsoleOptions": "openOnSessionStart"
		},
        {
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceDir}"
			],
			"sourceMaps": true,
			"outFiles": [ "${workspaceDir}/out/**/*.js" ]
		}
    ]
}
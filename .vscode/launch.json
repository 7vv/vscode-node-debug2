{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "launch as server",
            "type": "node2",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/out/src/nodeDebug.js",
            "stopOnEntry": false,
            "args": [ "--server=4711" ],
            "sourceMaps": true,
            "outDir": "${workspaceRoot}/out"
        },
        {
			"name": "Run Tests",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"program": "${workspaceRoot}/node_modules/.bin/mocha",
			"args": [
				"-u", "tdd",
				"--timeout", "3000",
				"--colors",
				"./out/test"
			],
			// "sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/out/test/**/*.js" ]
		}
    ]
}

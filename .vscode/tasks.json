{
    "version": "0.1.0",
    "command": "npm",
    "args": [ "run" ],
    "isShellCommand": true,
    "showOutput": "never",
    "runner": "terminal",
    "tasks": [
       {
            "taskName": "watch",
            "isBuildCommand": true,
            "isBackground": true,
            "problemMatcher": {
				"owner": "typescript",
				"applyTo": "closedDocuments",
				"fileLocation": ["relative", "${workspaceRoot}"],
				"pattern": {
					"regexp": "(.*)\\(\\d+,\\d+\\): error TS\\d+: (.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"beginsPattern": "Starting 'build'...",
					"endsPattern": "Finished 'build'"
				}
			}
        },
        {
            "taskName": "watch-build-test",
            "isBackground": true,
            "isTestCommand": true
        }
    ]
}